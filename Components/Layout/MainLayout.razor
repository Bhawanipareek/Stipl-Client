@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="app-container">
    @if (!IsLoginPage)
    {
        <!-- Header -->
        <header class="header">
            <div class="logo">
                <img src="https://assets.tadkeshwarfoods.com/images/MediaDetail-75-20250531171614.jpg" alt="STIPL Logo" />
            </div>
            <div class="premium">
                <img src="https://assets.tadkeshwarfoods.com/images/MediaDetail-94-20250609111454.png" alt="Premium Client" />
            </div>
            <a href="/menu" class="Menu">
                <i class="fa fa-bars"></i>
            </a>
        </header>

        <!-- Dropdown -->
        <div class="dropdown-bar">
            <select>
                <option selected>AJAY TRADING COMPANY</option>
                <option>Rajasthan Traders</option>
            </select>
        </div>
    }

    <!-- Main content -->
    <main class="main-content">
        @Body
    </main>

    @if (!IsLoginPage)
    {
        <!-- Footer -->
        <footer class="footer">
            <a href="/" class="footer-item">
                <i class="fas fa-home"></i>
                <span>Home</span>
            </a>
            <a href="/you" class="footer-item">
                <i class="fas fa-user"></i>
                <span>You</span>
            </a>
            <a href="/cart" class="footer-item">
                <i class="fas fa-shopping-cart"></i>
                <span>Cart</span>
            </a>
            <a href="/orders" class="footer-item">
                <i class="fas fa-truck"></i>
                <span>Orders</span>
            </a>
            <a href="/message" class="footer-item">
                <i class="fas fa-comment-dots"></i>
                <span>Message</span>
            </a>
        </footer>
    }
</div>

@code {
    private bool IsLoginPage => NavigationManager.Uri.Contains("/login");
}
