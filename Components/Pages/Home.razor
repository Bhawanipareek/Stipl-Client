<script>
    window.onload = function () {
        const carousel = document.getElementById('workingCarousel');
        if (!carousel) return;

        // Initialize Carousel with auto slide on load
        const myCarousel = new bootstrap.Carousel(carousel, {
            interval: 3000,   // Slide every 3 seconds
            wrap: true,
            pause: 'hover',
            touch: true
        });

        // Keyboard Navigation
        document.addEventListener('keydown', function (e) {
            if (e.key === 'ArrowLeft') myCarousel.prev();
            if (e.key === 'ArrowRight') myCarousel.next();
        });

        // Touch Swipe Support
        let touchStartX = 0, touchEndX = 0;
        carousel.addEventListener('touchstart', e => {
            touchStartX = e.changedTouches[0].screenX;
        }, { passive: true });

        carousel.addEventListener('touchend', e => {
            touchEndX = e.changedTouches[0].screenX;
            if (touchEndX < touchStartX - 50) myCarousel.next();
            if (touchEndX > touchStartX + 50) myCarousel.prev();
        }, { passive: true });
    };
</script>

