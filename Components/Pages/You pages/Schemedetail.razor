        </div>
        <!-- Add more slides as needed -->
    </div>
</div>

<script>
    (function() {
      const track = document.getElementById("rozerSliderTrack");
      const slides = document.querySelectorAll(".rozerSlide");
      let index = 0;

      setInterval(() => {
        index = (index + 1) % slides.length;
        track.style.transform = `translateX(-${index * 100}%)`;
      }, 3000); // Slide every 3 seconds
    })();
</script>
